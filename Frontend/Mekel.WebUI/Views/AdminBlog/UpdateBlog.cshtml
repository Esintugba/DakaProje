@model UpdateBlogDto
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Text</label>
    <input type="text" asp-for="Text" class="form-control" />
    <span asp-validation-for="Text" class="text-danger"></span>
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <label>BlogImage</label>
    <input type="text" asp-for="BlogImage" class="form-control" />
    <span asp-validation-for="BlogImage" class="text-danger"></span>
    <br />
    <label>Date</label>
    <input type="date" asp-for="Date" class="form-control" />
    <span asp-validation-for="Date" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

