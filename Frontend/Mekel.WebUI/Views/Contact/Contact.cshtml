@model CreateContactDto
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>İLETİŞİM</h2>
            <ol>
                <li><a href="index.html">Contact</a></li>
                <li>İletişim</li>
            </ol>
        </div>
    </div>
</div>
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>İletişim</h2>
            <p>Yardıma Mı İhtiyacınız Var? <span>Bize Ulaşın</span></p>
        </div>

        <div class="mb-3">
            <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="row gy-4">
            <div class="col-md-6">
                <div class="info-item  d-flex align-items-center">
                    <i class="icon bi bi-map flex-shrink-0"></i>
                    <div>
                        <h3>Adresimiz</h3>
                        <p>İstanbul/Avcılar</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center">
                    <i class="icon bi bi-envelope flex-shrink-0"></i>
                    <div>
                        <h3>E-Mail</h3>
                        <p>mekel@gmail.com</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item  d-flex align-items-center">
                    <i class="icon bi bi-telephone flex-shrink-0"></i>
                    <div>
                        <h3>Telefon</h3>
                        <p>0 444 46 42</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item  d-flex align-items-center">
                    <i class="icon bi bi-share flex-shrink-0"></i>
                    <div>
                        <h3>Çalışma Saatlerimiz</h3>
                        <div>
                            <strong>Pazartesi-Cumartesi:</strong>09:00 - 00:00;
                            <strong>Pazar:</strong> 11:00 - 21:00
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <form method="post" asp-action="Contact" asp-controller="Contact" class="php-email-form p-3 p-md-4">
            <div class="row">
                <div class="col-xl-6 form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" id="name" placeholder="Adınız - Soyadınız">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-xl-6 form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="email" placeholder="E-Mail">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Subject"></label>
                <input asp-for="Subject" class="form-control" id="subject" placeholder="Konu">
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Mesajınız" required></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="my-3">
                <div class="loading">Yükleniyor</div>
                <div class="error-message"></div>
                <div class="sent-message">Mesajınız gönderildi. Teşekkür ederiz!</div>
            </div>
            <div class="text-center">
                <button type="submit">Gönder</button>
            </div>
        </form>

    </div>
</section>


