@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Blog</h2>
            <ol>
                <li><a href="index.html">Blog</a></li>
                <li>Blog</li>
            </ol>
        </div>
    </div>
</div>

<section id="events" class="events">
    <div class="container-fluid" data-aos="fade-up">

        <div class="section-header">
            <h2>Blog</h2>
            <p>Blog <span>Sayfamıza</span> Göz Atın</p>
        </div>

        <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">
                @foreach(var item in Model)
                {
                <div class="swiper-slide event-item d-flex flex-column justify-content-end" style="background-image: url(@item.BlogImage)">
                    <h3>@item.Text</h3>
                    <p class="description">
                       @item.Description
                    </p>
                    <div class="price align-self-start"><a href="/Blog/Blog/">Devamını Oku</a></div>
                </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>
</section>